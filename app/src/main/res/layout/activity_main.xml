<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#5A4AED"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2D4F3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0 TSH"
                android:textAlignment="center"
                android:textColor="#38CD33"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profile"
                app:layout_constraintStart_toEndOf="@+id/level"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:tooltipText="Profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP 0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="invisible"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ivWheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="150dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="46dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vip_container">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="0"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivWheel"
            app:srcCompat="@drawable/wheel_new" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/flash"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="40dp"
                android:rotation="-17"
                android:src="@drawable/psl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bag"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:rotation="-10"
                android:src="@drawable/psl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="48dp"
                android:rotation="-160"
                android:src="@drawable/psl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/watch"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="76dp"
                android:layout_marginBottom="48dp"
                android:rotation="-160"
                android:src="@drawable/psl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/phones"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="120dp"
                android:rotation="-10"
                android:src="@drawable/psl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iphone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="76dp"
                android:layout_marginBottom="200dp"
                android:rotation="-10"
                android:src="@drawable/psl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:drawableBottom="@drawable/pointer"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/ivWheel"
        app:layout_constraintStart_toStartOf="@+id/ivWheel"
        app:layout_constraintTop_toTopOf="@+id/ivWheel" />


    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Products Collected"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/ivWheel"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/ivWheel"
        app:layout_constraintTop_toBottomOf="@+id/vip_container" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_help"
        android:text="About"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ivWheel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vip_container" />

    <ImageView
        android:id="@+id/ivTarget"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="181dp"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/ivWheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivWheel"
        app:srcCompat="@drawable/pointer" />

    <TextView
        android:id="@+id/btnSpin"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="161dp"
        android:background="#8BC34A"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="SPIN"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivWheel" />





    <include
        android:id="@+id/my_auth"
        android:visibility="gone"
        layout="@layout/auth_dialog"/>



    <include
        android:id="@+id/my_vip"
        android:visibility="gone"
        layout="@layout/vip_dialog"/>



    <include
        android:id="@+id/my_collection"
        layout="@layout/product_dialog"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/waiting"
        android:visibility="gone"
        layout="@layout/progress_dialog"
        />





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/nett"
        layout="@layout/network_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
/>
    <include
        android:id="@+id/work"
        android:visibility="gone"
        layout="@layout/active_days"/>

    <include
        android:id="@+id/connection"
        android:visibility="gone"
        layout="@layout/network_connection"/>



    <LinearLayout
        android:id="@id/vip_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/vip_container_inner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:layout_marginTop="-6dp"
            android:layout_margin="-1dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VIP 1" />

            <Button
                android:id="@+id/button1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VIP 2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VIP 3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VIP 4" />

            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"
                android:text="VIP 5" />

            <Button
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"
                android:text="VIP 6" />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/vip_container_inner_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-9dp"

            android:paddingTop="0dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            >

            <Button
                android:id="@+id/button6"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VVIP 1" />

            <Button
                android:id="@+id/button7"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VVIP 2" />

            <Button
                android:id="@+id/button8"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VVIP 3" />

            <Button
                android:id="@+id/button9"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="VVIP 4" />

            <Button
                android:id="@+id/button10"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"
                android:text="VVIP 5" />

            <Button
                android:id="@+id/button11"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"
                android:text="VVIP 6" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/vip_container_inner_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-9dp"

            android:paddingTop="0dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            >

            <Button
                android:id="@+id/button12"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="GOLD 1" />

            <Button
                android:id="@+id/button13"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="GOLD 2" />

            <Button
                android:id="@+id/button14"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="GOLD 3" />

            <Button
                android:id="@+id/button15"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"

                android:text="GOLD 4" />

            <Button
                android:id="@+id/button16"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"
                android:text="GOLD 5" />

            <Button
                android:id="@+id/button17"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:padding="2dp"
                android:text="GOLD 6" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/invite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:tooltipText="Invite"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pandora_envite" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Invite"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/invite"
                app:layout_constraintEnd_toEndOf="@+id/invite"
                app:layout_constraintStart_toStartOf="@+id/invite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rr"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:tooltipText="Invite"
                android:rotation="0"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/recharge" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Recharge"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/invite"
                app:layout_constraintEnd_toEndOf="@+id/invite"
                app:layout_constraintStart_toStartOf="@+id/invite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ww"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:tooltipText="Invite"
                android:rotation="0"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/withdraw" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Withdraw"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/invite"
                app:layout_constraintEnd_toEndOf="@+id/invite"
                app:layout_constraintStart_toStartOf="@+id/invite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cc"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:tooltipText="Invite"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pandora_chat" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chat"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/invite"
                app:layout_constraintEnd_toEndOf="@+id/invite"
                app:layout_constraintStart_toStartOf="@+id/invite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wallet"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:tooltipText="Invite"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pandora_support" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Support"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/invite"
                app:layout_constraintEnd_toEndOf="@+id/invite"
                app:layout_constraintStart_toStartOf="@+id/invite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/abt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:tooltipText="Invite"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pandora_about" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="About"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/invite"
                app:layout_constraintEnd_toEndOf="@+id/invite"
                app:layout_constraintStart_toStartOf="@+id/invite" />
        </LinearLayout>

    </LinearLayout>
    <include
        android:id="@+id/invite_info"
        layout="@layout/invite_advantage"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />


    <include
        android:id="@+id/bal"
        android:visibility="gone"
        layout="@layout/balance"/>

    <include
        android:id="@+id/resources_loading"
        android:visibility="visible"
        layout="@layout/loading_products"/>
    <include
        android:id="@+id/reset"
        android:visibility="gone"
        layout="@layout/reset_progress"
        />



</androidx.constraintlayout.widget.ConstraintLayout>