<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Recharge">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wallet Yangu"

            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/wallet_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0 TSH"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="19sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Toa pesa"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Weka pesa"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/withdraw_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/howto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView0"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toa Pesa"

            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background">

            <TextView
                android:id="@+id/network"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:textColor="@color/black"
                android:text="Chagua mtandao"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/simpleSpinner"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1" />
        </LinearLayout>


        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Ingiza kiasi"
            android:inputType="number"
            android:padding="12dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/name__"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Jina la akaunti"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tax: 0Tsh"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/w_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOA PESA" />

        <TextView
            android:id="@+id/withdraw_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unaruhusiwa kutoa pesa Jumamosi tu, alika marafiki wa tatu ili account yako iweze kutoa pesa mda wowote. rafiki atakaye alikwa anatakiwa kuanza na kiasi cha chini ambacho ni shilingi 5000"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center|start"
            android:background="#FF0000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recharge_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/howto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weka pesa"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hakiki muamala wako na wa hivi karibuni , Hatutohusika na upotevu wa hela pale ambapo hautokuwa makini na miamala yako "
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amount_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:hint="Weka kiasi"
            android:inputType="number"
            android:padding="12dp"
            android:textAlignment="center"
            android:visibility="gone" />


        <EditText
            android:id="@+id/transactionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:hint="Bandika message ya muamala wako hapa"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textColorHint="#4C4A4A" />

        <TextView
            android:id="@+id/screen_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:hint="Screenshot"
            android:inputType="number"
            android:padding="12dp"
            android:textAlignment="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Hakiki message" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/howto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background2"
            android:padding="4dp"
            android:textAlignment="center"
            android:text="Jinsi ya kuweka pesa ?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />


    </LinearLayout>



    <include
        layout="@layout/withdraw_instructions"
        android:id="@id/w"
        android:visibility="gone"
        />

    <include
        layout="@layout/recharge_instructions"
        android:id="@id/r"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/methods"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/howto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Njia za Manunuzi"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <include layout="@layout/saving" android:visibility="gone" android:id="@+id/saver"/>

    <LinearLayout
        android:id="@+id/pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:background="@drawable/prompt_bg"
        app:layout_constraintBottom_toTopOf="@+id/withdraw_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="On-hold Recharge Transaction" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#EDEDED"
                android:text="Malipo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#EDEDED"
                android:layout_height="wrap_content"
                android:text="Aina" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#EDEDED"
                android:layout_height="wrap_content"
                android:text="Hali" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transaction_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF5722"
                android:text="XXXXXXXXXXX" />

            <TextView
                android:id="@+id/transaction_date"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FF5722"
                android:layout_height="wrap_content"
                android:text="Weka pesa" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:text="PENDING"
                android:textColor="#FF5722" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>