<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/news"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/whatsapp_logo_sqr" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp Customer Service"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/invite"
            app:layout_constraintEnd_toEndOf="@+id/invite"
            app:layout_constraintStart_toStartOf="@+id/invite" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/telegram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/news"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/whatsapp_logo_sqr" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telegram Customer Service"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/invite"
            app:layout_constraintEnd_toEndOf="@+id/invite"
            app:layout_constraintStart_toStartOf="@+id/invite" />


    </LinearLayout>


</LinearLayout>
