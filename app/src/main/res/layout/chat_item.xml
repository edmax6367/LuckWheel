<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/received_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_received"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:maxWidth="60dp"
                android:src="@drawable/pandora_support" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/received_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:maxWidth="300dp"
                    android:text="Receiver Name"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/received_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/received_text_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:background="@drawable/received_reply_bg"
                        android:maxWidth="300dp"
                        android:minWidth="300dp"
                        android:padding="12dp"
                        android:text="TextView TextView "
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/received_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:maxWidth="300dp"
                        android:padding="12dp"
                        android:text="TextView TextView TextView"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/image_received"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/psl"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prompts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:clickable="false"
                        android:textColor="@color/black"
                        android:text="Select what you would like to know" />
                    <TextView
                        android:id="@+id/p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="What is pandora spin" />

                     <TextView
                         android:id="@+id/p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                         android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="How to spin" />

                    <TextView
                        android:id="@+id/p3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="How to recharge" />

                    <TextView
                        android:id="@+id/p4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="How do i withdraw" />

                    <TextView
                        android:id="@+id/p5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="Benefits of inviting" />

                    <TextView
                        android:id="@+id/p6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="Instant withdrawing" />
                    <TextView
                        android:id="@+id/p7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="How to invite" />
                    <TextView
                        android:id="@+id/p8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:background="@drawable/prompt_bg"
                        android:text="How to remove account limits" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/sent_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sent_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/received_reply_bg"
                            android:minWidth="300dp"
                            android:padding="12dp"
                            android:text="Reply test"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/sent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:maxWidth="300dp"
                            android:padding="12dp"
                            android:text=" TextView"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/image_sent"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/psl"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image_sent"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/profile" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>