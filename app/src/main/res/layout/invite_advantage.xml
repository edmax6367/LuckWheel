<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9000000"
    android:id="@+id/reset_panel"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/signup_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5247B0"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#5247B1"
                app:layout_constraintBottom_toTopOf="@+id/confirm_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#5247B0"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Alika marafiki"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#5247B2"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/gillu" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#5247B2"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/k0"
                                    android:layout_width="360dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/playfair_normal"
                                    android:padding="10dp"
                                    android:text="BENEFITS"
                                    android:textAlignment="textStart"
                                    android:textColor="#FFFFFF"
                                    android:textSize="19sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/playfair_normal"
                                    android:padding="10dp"
                                    android:text="Toa pesa wakati wowote"
                                    android:textAlignment="textStart"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/z0"
                                    android:layout_width="360dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:drawableStart="@drawable/poin_squire"
                                    android:fontFamily="@font/playfair_normal"
                                    android:padding="5dp"
                                    android:text="  Ondoa vizuizi"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/white"
                                    android:textSize="17sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/z1"
                                    android:layout_width="360dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:drawableStart="@drawable/poin_squire"
                                    android:fontFamily="@font/playfair_normal"
                                    android:padding="5dp"
                                    android:text="  Mapokeo ya haraka"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/white"
                                    android:textSize="17sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="360dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:drawableStart="@drawable/poin_squire"
                                    android:fontFamily="@font/playfair_normal"
                                    android:padding="5dp"
                                    android:text="  Malipo ya haraka"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/white"
                                    android:textSize="17sp"
                                    android:textStyle="normal" />


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingBottom="10dp"
                        android:text="Benefits.
When the user you invited recharges a certain amount of money into their account to spin products, you will receive a share of money based on the amount they recharge."
                        android:textColor="@color/black"
                        android:visibility="gone" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="DOES IT APPLY TO EACH RECHARGE OR ONLY THE FIRST-TIME RECHARGE?"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingBottom="10dp"
                        android:text="Answer.
It applies to each recharge the user makes. You will continue to receive a small percentage share of money based on the amount they recharge."
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingBottom="10dp"
                        android:text="The recharge amount can range from two hundred Tanzanian shillings (TSH 200) to two thousand five hundred Tanzanian shillings (TSH 2,500), which will be credited to your account after the invited user joins and recharges using the link with your code."
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Benefits and Bonuses"
                        android:textColor="#919191"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Benefit from instant withdraws by inviting 3 friends."
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Benefit from withdraws without taxes by inviting 3 friends."
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Terms and Conditions."
                        android:textColor="#919191"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="The withdraw limit will be remove only if you have invited 3 friends and they have successful recharged minimum amount of Tsh1,500, same applies for taxes"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                    <ImageView
                        android:id="@+id/product_image2"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:padding="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/scrollView2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/invite_pic" />


                </LinearLayout>

            </ScrollView>


            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2FFF00"
                android:padding="15dp"
                android:text="ALIKA RAFIKI"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>